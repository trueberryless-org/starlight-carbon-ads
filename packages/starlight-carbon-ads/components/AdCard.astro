---
import CarbonAd from "./CarbonAd.astro";
import config from "virtual:starlight-carbon-ads-config";
const { toc } = Astro.locals.starlightRoute;
---

{
  toc && (
    <>
      <div class="starlight-carbon-ads-spacer" />
      <div class="starlight-carbon-ads-toc-container">
        <CarbonAd code={config.code} placement={config.placement} />
      </div>
    </>
  )
}

<style>
  .starlight-carbon-ads-spacer {
    flex-grow: 1;
  }
  .starlight-carbon-ads-toc-container {
    margin-top: 1rem;
  }
</style>

<style is:global>
  @media (min-width: 72rem) {
    .right-sidebar-panel {
      min-height: 100%;
      display: flex;
      flex-direction: column;
    }
    .right-sidebar-panel > .sl-container {
      display: flex;
      flex-direction: column;
      flex: 1;
    }
  }
</style>
